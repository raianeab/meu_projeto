                    <h5 class="card-title"><%= message %></h5>
                    <% if (error && process.env.NODE_ENV === 'development') { %>
                        <div class="alert alert-danger">
                            <pre><%= JSON.stringify(error, null, 2) %></pre>
                        </div>
                    <% } %>
                    <a href="/" class="btn btn-primary">Voltar para a p√°gina inicial</a>
                </div>
            </div>
        </div>
    </div>
</div>

